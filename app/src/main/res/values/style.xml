<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSecondary">@color/secondary</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="buttonMainActivity" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="elevation">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textMainActivity" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="editTextLogin" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_login</item>
        <item name="android:padding">14sp</item>k
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="dialog_create_cat" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowMinWidthMajor">90%</item>
    </style>
</resources>